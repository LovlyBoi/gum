{
  "include": ["./src/**/*.ts", "src/bin/index.js", "src/index.js"],
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "target": "es5",
    "module": "CommonJS",
    "lib": ["ES6"],
    "declaration": false,
    "removeComments": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "forceConsistentCasingInFileNames": true
  }
}
